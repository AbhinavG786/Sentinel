FROM node:20-alpine

WORKDIR /app

# Copy root first
COPY package.json package-lock.json tsconfig.json ./

# Copy ONLY what this service needs
COPY src/services/user-service ./src/services/user-service

# Copy service tsconfig if it exists
COPY src/services/user-service/tsconfig.json ./src/services/user-service/tsconfig.json

# ADD THIS: copy your shared package
COPY packages/shared-utils ./packages/shared-utils

# Install root + workspace deps so shared-utils becomes a real package
RUN npm install

# Build shared utils
RUN npm run build --workspace=packages/shared-utils

# Install deps only for this service
RUN npm install --workspace=src/services/user-service

# Build
RUN npm run build --workspace=src/services/user-service

EXPOSE 4000

CMD ["node", "src/services/user-service/dist/server.js"]
