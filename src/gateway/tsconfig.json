{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "src/**/*",
    "types",
    "src/firebase",
    "packages/shared-utils/src/kafka.ts",
    "packages/shared-utils/src/redisClient.ts",
    "packages/shared-utils/src/env.ts",
    "packages/shared-utils/src/knexFile.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
